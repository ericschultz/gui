<Controls1:CoAppWindow.MoreHeaderItems>
        <x:Array Type="Panel">
            <Grid>
                <Controls:ActivityNotification  Margin="0,0,20,0" 
                                                    NumberOfActivities="{Binding NumberOfActivities}" 
                                                    NumberofActivitiesFinished="{Binding NumberOfActivitiesFinished}" 
                                                    NumberOfActivityFailures="{Binding NumberOfActivityFailures}" ButtonCommand="{Binding GoToActivities}"/>
            </Grid>
        </x:Array>
    </Controls1:CoAppWindow.MoreHeaderItems>
    <Grid>

    	

        <ItemsControl ItemsSource="{Binding Activities}" Visibility="{Binding Activities, Converter={StaticResource EnumerableCountToVisibilityConverter}}" >
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type Interfaces:Activity}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>


                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding PackageName}"/>

                        <Custom:MetroProgressBar Value="{Binding Progress}" Grid.Column="1" x:Name="Progress"/>
                        <TextBlock Text="Finished"  Grid.Column="1" Visibility="Collapsed" x:Name="Finished"/>
                        <TextBlock Grid.Column="1" Visibility="Collapsed" x:Name="Error"><Hyperlink Command="{Binding SeeError}">Error</Hyperlink></TextBlock>

                        <Button Command="{Binding DataContext.Remove, RelativeSource={RelativeSource AncestorType={x:Type Controls1:CoAppFrameChild}}}" 
                                CommandParameter="{Binding}" Visibility="Hidden" 
                                x:Name="RemoveButton"/>

                    </Grid>
                    <DataTemplate.Triggers>
                        <DataTrigger  Binding="{Binding State}" Value="Finished">
                            <Setter Property="Visibility" Value="Visible" TargetName="Finished"/>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="Progress"/>
                            <Setter Property="Visibility" Value="Visible" TargetName="RemoveButton"/>
                        </DataTrigger>


                        <DataTrigger  Binding="{Binding State}" Value="Failed">
                            <Setter Property="Visibility" Value="Visible" TargetName="Error"/>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="Progress"/>
                            <Setter Property="Visibility" Value="Visible" TargetName="RemoveButton"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                   
                </DataTemplate>

            </ItemsControl.ItemTemplate>

        </ItemsControl>
        <TextBlock Visibility="{Binding Activities, ConverterParameter=true, Converter={StaticResource EnumerableCountToVisibilityConverter}}" 
                   FontFamily="{StaticResource HeaderFontFamily}" FontSize="26.667"><Run Text="No packages are being modified."/></TextBlock>
			<!--	   
		<CoApp_Gui_Toolkit_Controls:LoadingGrid  Style="{DynamicResource LoadingGridStyle1}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>-->

<UserControl x:Class="CoApp.PackageManager.Controls.ActivitiesNotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ViewModel="clr-namespace:CoApp.PackageManager.ViewModel" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="Root">
	<UserControl.Resources>
		
	</UserControl.Resources>
    <Grid>
        <Button Style="{DynamicResource WinLayout_HeaderSettingButton}" 
		Command="{Binding ButtonCommand, ElementName=Root}" 
		Content="{Binding ViewModel, ElementName=Root}">
            <Button.Resources>
                <DataTemplate DataType="{x:Type ViewModel:CommonGuiViewModel}">
                    <TextBlock Text="{Binding NumberOfActivities, StringFormat='{}{0} actions'}" x:Name="Text"/>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding NumberOfActivities, Converter={StaticResource }" />
                    </DataTemplate.Triggers>
                </DataTemplate>
            </Button.Resources>
        </Button>
    </Grid>
</UserControl>

<Controls:CoAppWindow x:Class="CoApp.Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:Controls="clr-namespace:CoApp.Gui.Toolkit.Controls;assembly=CoApp.Gui.Toolkit"
                  Title="CoApp Update" DataContext="{Binding CoAppWindowViewModel, Source={StaticResource Locator}}" Content="{Binding MainScreenViewModel, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                      >
    <Controls:CoAppWindow.Resources>
        <ResourceDictionary Source="PageResourceDictionary.xaml"/>
    </Controls:CoAppWindow.Resources>
    <Controls:CoAppWindow.ModalResourceDictionary>
        <ResourceDictionary Source="ModalResourceDictionary.xaml"/>
    </Controls:CoAppWindow.ModalResourceDictionary>

</Controls:CoAppWindow>
